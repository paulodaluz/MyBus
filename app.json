{
  "expo": {
    "name": "my-bus",
    "slug": "my-bus",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/bus_icon.png",
    "splash": {
      "image": "./assets/splash_screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#7413FB"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/bus_icon.png",
        "backgroundColor": "#F1F1F1"
      }
    },
    "web": {
      "favicon": "./assets/bus_icon.png"
    }
  }
}
